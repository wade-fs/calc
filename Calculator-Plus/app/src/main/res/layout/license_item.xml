<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_l"
        android:layout_marginTop="@dimen/space_l"
        android:layout_marginEnd="@dimen/space_l"
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
        android:textColor="?attr/textPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Library Name" />

    <TextView
        android:id="@+id/libraryOwner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_sm"
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Body1"
        android:textColor="?attr/textDisable"
        app:layout_constraintEnd_toEndOf="@+id/library"
        app:layout_constraintStart_toStartOf="@+id/library"
        app:layout_constraintTop_toBottomOf="@+id/library"
        tools:text="Owner" />

    <TextView
        android:id="@+id/licenseType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_m"
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Body1"
        android:textColor="?attr/textSecondary"
        app:layout_constraintEnd_toEndOf="@+id/libraryOwner"
        app:layout_constraintStart_toStartOf="@+id/libraryOwner"
        app:layout_constraintTop_toBottomOf="@+id/libraryOwner"
        tools:text="Library license" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:background="?attr/border"
        android:layout_marginTop="@dimen/space_l"
        app:layout_constraintEnd_toEndOf="@+id/licenseType"
        app:layout_constraintStart_toStartOf="@+id/licenseType"
        app:layout_constraintTop_toBottomOf="@+id/licenseType" />

</androidx.constraintlayout.widget.ConstraintLayout>